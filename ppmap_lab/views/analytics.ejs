        <p>This page simulates Google Analytics <code>hitCallback</code> gadget vulnerability.</p>

        <h2>Test Payload:</h2>
        <code>?__proto__[hitCallback]=alert(document.domain)</code>

        <h2>Current Query:</h2>
        <pre><%= JSON.stringify(query, null, 2) %></pre>
    </div>

    <script>
        // Simulate Google Analytics with hitCallback gadget
        (function () {
            const ga = function (command, hitType, options) {
                if (options && options.hitCallback) {
                    // Vulnerable: executes callback from prototype
                    if (typeof options.hitCallback === 'function') {
                        options.hitCallback();
                    } else if (typeof options.hitCallback === 'string') {
                        eval(options.hitCallback); // Dangerous!
                    }
                }
            };

            // Pollute prototype from query params
            const params = <%= JSON.stringify(query) %>;
            Object.assign(Object.prototype, params);

            // Trigger analytics
            ga('send', 'pageview', {});
        })();
    </script>
